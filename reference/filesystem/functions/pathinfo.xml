 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Ejemplo de <function>pathinfo</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$partes_ruta = pathinfo('/www/htdocs/index.html');

echo $partes_ruta['dirname'] . "\n";
echo $partes_ruta['basename'] . "\n";
echo $partes_ruta['extension'] . "\n";
echo $partes_ruta['filename'], "\n"; // desde PHP 5.2.0
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
/www/htdocs
index.html
html
index
]]>
    </screen>
   </example>
  </para>
 </refsect1>

