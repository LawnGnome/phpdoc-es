 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Ejemplo de <function>basename</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$ruta = "/home/httpd/html/index.php";
$archivo = basename($ruta);         // $archivo está establecido a "index.php"
$archivo = basename($ruta, ".php"); // $archivo está establecido a "index"
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

