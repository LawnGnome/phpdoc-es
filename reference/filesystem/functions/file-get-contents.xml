     <informaltable>
      <tgroup cols="2">
       <thead>
        <row>
         <entry>&Version;</entry>
         <entry>&Description;</entry>
        </row>
       </thead>
       <tbody>
        <row>
         <entry>5.0.0</entry>
         <entry>
          Se agregó soporte para contextos.
         </entry>
        </row>
        <row>
         <entry>5.1.0</entry>
         <entry>
          Se agregaron los parámetros <parameter>desplazamiento</parameter>
          y <parameter>long_max</parameter>.
         </entry>
        </row>
       </tbody>
      </tgroup>
     </informaltable>
    </para>
   </refsect1>

   <refsect1 role="notes">
    &reftitle.notes;
    &note.bin-safe;
    &tip.fopen-wrapper;
    &note.context-support;
    &warn.ssl-non-standard;
   </refsect1>

