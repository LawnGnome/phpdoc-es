 </refsect1>
 
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Buscar la fecha desde índices de número de semana y día</title>
    <programlisting role="php">
<![CDATA[
<?php
date_default_timezone_set('Europe/London');

$datetime = new DateTime();

// Índice del inicio de la semana 2 (7) = 5
$datetime->setISODate(2008, 2, 5); // El día 5 de la semana 2 del 2008 es el 11 de enero. 

// Índice del inicio de la semana 2 (7) = 10
$datetime->setISODate(2008, 2, 10); // El día 10 de la semana 2 del 2008 es el 16 de enero.
?>
]]>
    </programlisting>
   </example>
  </para>
  <para>
   <example>
    <title>Buscar el mes donde se encuentra una semana</title>
    <programlisting role="php">
<![CDATA[
<?php
date_default_timezone_set('Europe/London');

$datetime = date_create();
date_isodate_set($datetime, 2008, 6); // La semana 6 del 2008 está en febrero.
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

