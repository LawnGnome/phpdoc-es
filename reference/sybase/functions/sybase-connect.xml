 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Ejemplo de <function>sybase_connect</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$enlace = sybase_connect('SYBASE', '', '')
          or die("¡No pudo conectarse!");
echo "Se conectó satisfactoriamnete";
sybase_close($enlace);
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

