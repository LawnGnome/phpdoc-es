<refentry id="function.xattr-get">
 <refnamediv>
  <refname>xattr_get</refname>
  <refpurpose>
   Obtiene un atributo extendido
  </refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
