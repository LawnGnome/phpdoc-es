 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Ejemplo de <function>cubrid_schema</function></title>
   <programlisting role="php">
<![CDATA[
<?php
$atributos = cubrid_schema ($con, CUBRID_SCH_ATTRIBUTE, "person");
while (list($clave, $valor) = each($atributos)) {
   echo $valor["NAME"];
   echo $valor["DOMAIN"];
}
?>
]]>
   </programlisting>
  </example>
 </refsect1>
 
